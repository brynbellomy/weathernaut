#!/usr/bin/env node

// Generated by CoffeeScript 1.6.1
(function() {
  var Weathernaut, apiKey, argv, days, naut, service, usage, zip;

  require('colors');

  Weathernaut = require('../').Weathernaut;

  usage = "" + '$'.white.bold + " " + 'weathernaut'.red + " [options]";

  argv = require('optimist').alias('s', 'service').describe('s', "The Weather Underground service to query (" + (Weathernaut.validServices().join('|')) + ")").alias('z', 'zip').describe('z', 'The zipcode you want your query to target.').alias('k', 'apikey').describe('k', 'Weather Underground API key.').alias('d', 'days').describe('d', 'Number of days (only has an effect with the "forecast" service).')["default"]('d', 10).usage("Usage:\n  " + usage).demand(['s', 'z', 'k']).argv;

  service = argv.service, zip = argv.zip, apiKey = argv.apiKey, days = argv.days;

  naut = new Weathernaut(apiKey);

  switch (service) {
    case 'astronomy':
      naut.printAstronomicalDataFor(zip);
      break;
    case 'forecast':
      naut.printForecastDataFor(zip, days);
      break;
    default:
      console.error("Valid values for the 'service' argument are: " + (Weathernaut.validServices().join(', ')));
  }

}).call(this);
